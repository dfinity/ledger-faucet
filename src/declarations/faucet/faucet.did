type ledger_config = record {
    canister_id: principal;
    is_mint: bool;
};

type init_args = record {
    icp_ledger: ledger_config;
    icrc1_ledger: ledger_config;
};

service: (init_args) -> {
    "account_identifier": () -> (text) query;
    "transfer_icrc1": (to_principal: principal) -> ();
    "transfer_icp": (to_account_identifier: text) -> ();
}
